<% layout('laycompleto') -%>
<div class="container">
  <div class="perfil">
    <h3 >Registro de Usuarios</h3>
      <form class=" datos form-inline" action="/auth/registro" method="post">
        <div class="col-xs-10 col-sm-10 col-lg-10">
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" placeholder="Ingrese un email" name="email" required>
        </div>
        </div>
      <div class="col-xs-10 col-sm-10 col-lg-10">
        <div class="form-group">
          <label  for="usuario">Usuario:</label>
          <input type="text" class="form-control" id="usuario" placeholder="Ingrese un usuario" name="usuario" required>
        </div>
       </div>
      <div class="col-xs-8 col-sm-8 col-lg-10">
        <div class="form-group">
          <label  for="passu">Contrase√±a:</label>
          <input type="password" class="form-control" id="pwd" placeholder="Ingrese un password" name="passu" required>
        </div>
      </div>
      <div class="col-xs-8 col-sm-8 col-lg-10">
        <div class="checkbox">
          <label><input type="checkbox" name="remember"> Recordar</label>
        </div>
        <button type="submit" class="btn btn-default">Guardar</button>
      </div>
    </form>
    </div>
</div>
